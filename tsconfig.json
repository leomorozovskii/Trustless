{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@berezka-dao/*": [
        "./src/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@generated/*": [
        "./generated/*"
      ],
      "@common/*": [
        "./styles/common/*"
      ]
    },
    "moduleResolution": "bundler"
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "outdated",
    "./outdated",
    "./outdated/*",
  ]
}